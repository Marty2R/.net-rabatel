@model mvc.Models.AccountViewModel
<h1 class="text-center mb-4" style="color: #007bff;">Création d'un nouvel enseignant</h1>

<form asp-action="Register" asp-controller="Account" method="post" class="form-horizontal"
    style="background-color: #f9f9f9; padding: 20px; border-radius: 10px;">
    <div class="form-group row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label" style="font-weight: bold;"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control mb-3" style="border-radius: 20px;">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="Password" class="col-sm-2 col-form-label" style="font-weight: bold;"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control mb-3" style="border-radius: 20px;" type="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="FirstName" class="col-sm-2 col-form-label" style="font-weight: bold;"></label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control mb-3" style="border-radius: 20px;">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="LastName" class="col-sm-2 col-form-label" style="font-weight: bold;"></label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control mb-3" style="border-radius: 20px;">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <div class="offset-sm-2 col-sm-10">
            <input type="submit" value="Création d'un enseignant" class="btn btn-primary mb-3"
                style="border-radius: 20px; padding: 10px 20px; font-size: 16px;">
        </div>
    </div>
</form>

<div class="text-danger" asp-validation-summary="All" style="font-size: 14px;"></div>