@{
}

@model IEnumerable<Teacher>

<p>Teacher Liste</p>

<a asp-controller="Teacher" asp-action="Add" class="btn btn-primary">Ajouter un enseignant</a>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Salaire</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.Salary €</td>
                    <td>
                        <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id"
                            class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>