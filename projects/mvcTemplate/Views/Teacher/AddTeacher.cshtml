@model Teacher

<h1 class="text-center">Ajouter un nouveau enseignant</h1>

<form asp-action="AddTeacher" asp-controller="Teacher" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="FirstName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Age" class="form-control" type="number">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Salary" class="form-control" type="number">
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Subject" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Subject" class="form-control">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="HireDate" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="HireDate" class="form-control" type="date">
            <span asp-validation-for="HireDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Ajouter l'enseignant" class="btn btn-primary">
        </div>
    </div>
</form>

<div class="text-danger" asp-validation-summary="All"></div>
